<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="trackracer.RacerPages.CustomerDashboard"
             Title="Customer Dashboard"
             BackgroundColor="#ff5733">

    <VerticalStackLayout Padding="20" Spacing="10">

        <Button Text="Send More Requests"
                Clicked="OnLoginnClicked"
                BackgroundColor="#4CAF50"
                TextColor="White"
                FontAttributes="Bold" />
        <Button Text="Send More Requests"
         Clicked="OnchatClicked"
         BackgroundColor="#4CAF50"
         TextColor="White"
         FontAttributes="Bold" />

        <Label Text="Requests Given By You"
               FontSize="24"
               FontAttributes="Bold"
               HorizontalOptions="Center"
               TextColor="White"/>

        <!-- This StackLayout will be dynamically filled with requests -->
        <ScrollView x:Name="RequestScrollView">
            <StackLayout x:Name="RequestListLayout" Spacing="10"/>
        </ScrollView>

    </VerticalStackLayout>
</ContentPage>
